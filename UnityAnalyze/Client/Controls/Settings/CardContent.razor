@using System.Diagnostics.CodeAnalysis

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Header</h5>
    </div>

    <div class="card-body">
        @Body
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment Body { get; set; }
    
    [Parameter]
    public string Header { get; set; }
}